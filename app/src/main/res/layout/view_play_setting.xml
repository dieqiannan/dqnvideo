<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="播放速度" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_btn_progress_0_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#2bd4e7"
                android:padding="10dp"
                android:foreground="?attr/selectableItemBackground"
                android:text="0.2" />

            <TextView
                android:id="@+id/tv_btn_progress_0_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#2bd4e7"
                android:padding="10dp"
                android:foreground="?attr/selectableItemBackground"
                android:layout_marginLeft="10dp"
                android:text="0.4" />

            <TextView
                android:id="@+id/tv_btn_progress_0_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#2bd4e7"
                android:padding="10dp"
                android:foreground="?attr/selectableItemBackground"
                android:layout_marginLeft="10dp"
                android:text="0.6" />

            <TextView
                android:id="@+id/tv_btn_progress_0_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#2bd4e7"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:foreground="?attr/selectableItemBackground"
                android:text="0.8" />

            <TextView
                android:id="@+id/tv_btn_progress_1_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#2bd4e7"
                android:padding="10dp"
                android:foreground="?attr/selectableItemBackground"
                android:layout_marginLeft="10dp"
                android:text="1.0" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_btn_progress_1_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#2bd4e7"
                android:padding="10dp"
                android:foreground="?attr/selectableItemBackground"
                android:text="1.2" />

            <TextView
                android:id="@+id/tv_btn_progress_1_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#2bd4e7"
                android:padding="10dp"
                android:foreground="?attr/selectableItemBackground"
                android:layout_marginLeft="10dp"
                android:text="1.4" />

            <TextView
                android:id="@+id/tv_btn_progress_1_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#2bd4e7"
                android:padding="10dp"
                android:foreground="?attr/selectableItemBackground"
                android:layout_marginLeft="10dp"
                android:text="1.6" />

            <TextView
                android:id="@+id/tv_btn_progress_1_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#2bd4e7"
                android:padding="10dp"
                android:foreground="?attr/selectableItemBackground"
                android:layout_marginLeft="10dp"
                android:text="1.8" />

            <TextView
                android:id="@+id/tv_btn_progress_2_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#2bd4e7"
                android:padding="10dp"
                android:foreground="?attr/selectableItemBackground"
                android:layout_marginLeft="10dp"
                android:text="2.0" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>